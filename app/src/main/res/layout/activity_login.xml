<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <variable name="user" type="com.example.rosa.diplomska.model.Entity.User"/>
        <variable name="loginViewModel" type="com.example.rosa.diplomska.viewModel.LoginActivityViewModel"/>
    </data>
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Drowner"
        tools:context="com.example.rosa.diplomska.view.activity.LoginActivity"
        android:focusableInTouchMode="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/container_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">
            </FrameLayout>
        </ScrollView>
    </RelativeLayout>
</layout>